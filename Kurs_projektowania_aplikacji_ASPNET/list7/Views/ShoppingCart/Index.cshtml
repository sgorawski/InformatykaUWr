@model IEnumerable<ASPNET_Z7.Models.Product>

@{
    var grid = new WebGrid(Model, canPage: false, canSort: false);
}

<h2>Shopping Cart</h2>

@Html.ActionLink("Back to products", "Index", controllerName: "Products")

<div>
    @grid.GetHtml(
        columns: grid.Columns(
            grid.Column("Name"),
            grid.Column("Description"),
            grid.Column("Price")),
        htmlAttributes: new { @class = "table" })
</div>
